<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="vn.edu.tdc.zuke_customer">

    <!-- permission -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <application
        android:name=".ZukeApplication"
        android:allowBackup="true"
        android:icon="@drawable/app"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.DarkActionBar"
        android:usesCleartextTraffic="true"
        tools:targetApi="m">
        <service
            android:name=".FCM.FirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/api_key" />

        <!-- activitys -->
        <activity android:name=".activitys.MapActivity"
            android:theme="@style/AppTheme.DarkActionBar.NoActionBar">

        </activity>
        <activity
            android:name=".activitys.LoginActivity"
            android:theme="@style/AppTheme.DarkActionBar.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activitys.FacebookAuthActivity"
            android:theme="@style/AppTheme.DarkActionBar.NoActionBar">

        </activity>
        <activity
            android:name=".activitys.RegisterActivity"
            android:theme="@style/AppTheme.DarkActionBar.NoActionBar" >

        </activity>
        <activity
            android:name=".activitys.ForgotPasswordActivity"
            android:theme="@style/AppTheme.DarkActionBar.NoActionBar" >

        </activity>
        <activity
            android:name=".activitys.OTPVerificationActivity"
            android:theme="@style/AppTheme.DarkActionBar.NoActionBar" >

        </activity>

        <activity
            android:name=".activitys.ForgotPasswordChangeActivity"
            android:theme="@style/AppTheme.DarkActionBar.NoActionBar" />
        <activity
            android:name=".activitys.HomeScreenActivity"
            android:theme="@style/AppTheme.DarkActionBar">

        </activity>
        <activity
            android:name=".activitys.ProfileScreenActivity"
            android:theme="@style/AppTheme.DarkActionBar">

        </activity>
        <activity
            android:name=".activitys.EditProfileActivity"
            android:theme="@style/AppTheme.DarkActionBar">
        </activity>
        <activity
            android:name=".activitys.ChangePasswordActivity"
            android:theme="@style/AppTheme.DarkActionBar">
        </activity>
        <activity
            android:name=".activitys.SupportActivity"
            android:theme="@style/AppTheme.DarkActionBar">
        </activity>
        <activity
            android:name=".activitys.IntroduceAppActivity"
            android:theme="@style/AppTheme.DarkActionBar">
        </activity>
        <activity
            android:name=".activitys.CartActivity"
            android:theme="@style/AppTheme.DarkActionBar">

        </activity>
        <activity
            android:name=".activitys.PaymentActivity"
            android:theme="@style/AppTheme.DarkActionBar">

        </activity>

        <activity
            android:name=".activitys.SearchActivity"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name=".activitys.FavoriteActivity"
            android:theme="@style/AppTheme.DarkActionBar">
        </activity>
        <activity
            android:name=".activitys.NotificationActivity"
            android:theme="@style/AppTheme.DarkActionBar">

        </activity>
        <activity
            android:name=".activitys.DetailProductActivity"
            android:theme="@style/AppTheme.DarkActionBar">
        </activity>
        <activity
            android:name=".activitys.HistoryOrderActivity"
            android:theme="@style/AppTheme.DarkActionBar">
        </activity>
        <activity
            android:name=".activitys.DetailHistoryOrderActivity"
            android:theme="@style/AppTheme.DarkActionBar">
        </activity>
        <activity
            android:name=".activitys.RatingActivity"
            android:theme="@style/AppTheme.DarkActionBar">
        </activity>
        <activity
            android:name=".activitys.CategoryActivity"
            android:theme="@style/AppTheme.DarkActionBar">
        </activity>
        <meta-data android:name="com.facebook.sdk.ApplicationId" android:value="@string/facebook_app_id"/>
        <activity android:name="com.facebook.FacebookActivity" android:configChanges= "keyboard|keyboardHidden|screenLayout|screenSize|orientation" android:label="@string/app_name" />
        <activity android:name="com.facebook.CustomTabActivity" android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="@string/fb_login_protocol_scheme" />
            </intent-filter>
        </activity>

    </application>

</manifest>